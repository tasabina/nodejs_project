<h1>Add new course</h1>
{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}
<form action="/add" method="POST" novalidate>
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Input name"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" min="1" required value="{{data.price}}">
        <label for="price">Course Price</label>
        <span class="helper-text" data-error="Input price"></span>
    </div>
     <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
        <label for="img">Picture URL</label>
        <span class="helper-text" data-error="Input URL"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary">Add course</button>
</form>